/* pages/category/index.wxss */
.container{
  flex-direction: row;
  height: 100%;
  padding: 0;
  background-color: #f7f7fa;
}
.left{
  height:1070rpx;
  background-color: #ffffff;
  width: 170rpx;
  overflow: hidden;
}
.type-navbar{
  height:100%;
  overflow-y: scroll;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  width: 170rpx;
  font-size: 32rpx;
}
.type-navbar-item{
  border-left: 0;
  padding: 20rpx 20rpx 20rpx 20rpx;
  text-align: center;
  background-color: #ffffff;
}
.type-item-on{
  border-left: 2rpx solid #E76262;
  background-color: #f7f7fa;
  color: #E76262;
}
.right{
  height: 1070rpx;
  flex: 2;
}

.tag-right{
  flex-direction: row;
  display: flex;
}
.tag-title{
  flex-direction: row;
  justify-content: space-between;
  min-height: 20rpx;
  padding-left: 20rpx;
  padding-right: 10rpx;
  display: flex;
  overflow: hidden;
}
.tag-name{
  font-size: 32rpx;
  text-align: center;
  margin-top: -15rpx;
}
.tag-more{
  font-size: 32rpx;
  margin-top: 30rpx;
  color: #E76262;
}
.icon-more{
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
}
.tag-content{
  flex-direction: row;
  padding: 20rpx;
  padding-left:0;
  display: flex;
  border-radius: 12rpx;
  flex-wrap:wrap;
  background-color: white;
  width: 500rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.tag-item{
  flex-direction:column;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.tag-itemImage{
  width: 140rpx;
  height:160rpx;
  border-radius: 12rpx;
}
.item-name{
  display: block;
  text-align: center;
  color: #616161;
  font-size: 28rpx;
}